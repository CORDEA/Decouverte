<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="end"
    android:layout_marginBottom="@dimen/list_item_main_bottom_bar_vertical_margin"
    android:layout_marginTop="@dimen/list_item_main_bottom_bar_vertical_margin"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/favorite_button"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:background="@android:color/transparent"
        style="@style/IconActive"
        android:layout_marginEnd="@dimen/icon_end_margin"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"/>

    <ImageButton
        android:id="@+id/open_button"
        android:src="@drawable/ic_open_in_browser_black_24dp"
        android:background="@android:color/transparent"
        style="@style/IconActive"
        android:layout_marginEnd="@dimen/icon_end_margin"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"/>

</LinearLayout>