<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginTop="@dimen/list_item_main_margin"
    android:layout_marginEnd="@dimen/list_item_main_margin"
    android:layout_marginStart="@dimen/list_item_main_margin"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <jp.cordea.decouverte.AspectFitImageView
            android:id="@+id/image_view"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include
            layout="@layout/list_item_main_bottom_bar" />

    </LinearLayout>
</android.support.v7.widget.CardView>
